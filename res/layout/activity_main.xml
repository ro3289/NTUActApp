<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.app.FragmentTabHost
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">
    
	<LinearLayout  
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	
	     <TabWidget
            android:id="@android:id/tabs"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"/>
  
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"/>
 
        <FrameLayout
            android:id="@+id/realtabcontent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <include
	    android:id="@+id/search"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    layout="@layout/search" />
        <LinearLayout
            android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">
		    <Button
		        android:id="@+id/map_activity"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        android:layout_alignParentBottom="true"
		        android:text="活動地圖" />
		    
		     <Button
			    android:id="@+id/set_preference"
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    android:text="偏好設定"  />
		     
		     <Button
			    android:id="@+id/pick_friend"
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    android:text="選擇朋友"  />
		     <Button 
		        android:id="@+id/preference_friend_switch"
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    android:text="朋友活動" />
		     <TextView
        		android:id="@+id/invite_cnt"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:textSize="20dp" />
		     <ImageButton
        		android:id="@+id/message"
        		android:layout_width="40dp"
        		android:layout_height="40dp"
        		android:onClick="showInvitation"
        		android:src="@drawable/invitation"
        		android:textSize="20dp" />
		</LinearLayout>  
	</LinearLayout>  
</android.support.v4.app.FragmentTabHost>